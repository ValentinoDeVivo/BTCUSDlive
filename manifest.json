{
  "manifest_version": 3,
  "name": "BTC/USDTlive",
  "description": "btc/usdt value updated every 3 seconds.",
  "version": "1.0.0",
  "icons": {
    "16": "./media/btcusdtlive_16.png",
    "32": "./media/btcusdtlive_32.png",
    "48": "./media/btcusdtlive_48.png",
    "128": "./media/btcusdtlive_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BTC/USDTlive",
    "default_icons": {
      "16": "./media/btcusdtlive_16.png",
      "32": "./media/btcusdtlive_32.png",
      "48": "./media/btcusdtlive_48.png",
      "128": "./media/btcusdtlive_128.png"
    }
  },
  "permissions": ["activeTab", "tabs", "storage", "scripting"]
}
